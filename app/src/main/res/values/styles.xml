<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="txtView_textColor">
        <item name="android:textColor">@color/default_text_color</item>
    </style>
    <style name="txtView_Detail" parent="txtView_textColor">
        <item name="android:layout_marginTop">@dimen/layout_margin_detail</item>
    </style>

    <style name="txtView_Text" parent="txtView_textColor">
        <item name="android:layout_marginTop">@dimen/layout_margin_text</item>
    </style>

</resources>
